extends layout.pug

block scripts

block content
    // Grid of Artists
    .special
        .container
            .special-top
                ul#item_container.grid_2
                    each val in data.artists_objects    
                        li
                            a(href='artists/' + val.artistid)
                                img.img-responsive(src='/images/artist' + val.artistid + '.jpg', alt='')
                            .special-info.grid_1.simpleCart_shelfItem
                                h4(style='text-align:center')= val.name
                                .item_add
                                    span.item_price
                                        .content
                                            p #{val.bio}
                                        //--------------
                                        br
                                        script.
                                          document.querySelector('button').addEventListener('click', function() {
                                          document.querySelector('#content').style.height= 'auto';
                                          this.style.display= 'none';
                                          });
                                        #read  
                                            a(href='artists/' + val.artistid) Read more
                                        br
                                        br
                                        //--------------
                                        a(href=val.portfoliolink) Portfolio
                                center